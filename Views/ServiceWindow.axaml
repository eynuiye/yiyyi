<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication3.Views.ServiceWindow"
        Title="ServiceWindow">
 <DockPanel>
	<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
		<TextBlock Text="Текущий пользователь:"></TextBlock>
		<TextBlock Text="{Binding user.Login}" VerticalAlignment="Bottom"></TextBlock>
	</StackPanel>
	<ListBox Items="{Binding Services}">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<StackPanel>
					<TextBlock Text="{Binding Nomination}"></TextBlock>
					<TextBlock Text="{Binding Price}"></TextBlock>
				</StackPanel>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
 </DockPanel>
</Window>
